{
  "compilerOptions": {
    "incremental": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "NodeNext",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "src/**/*",
    "src/*"
  ]
}